<%= form_for [@story, @player] do |f| %>
<div class="field">
  <%= f.label :player_name %>
  <%= f.text_field :player_name %>
</div>
<div class="field">
  <%= f.label :character_name %>
  <%= f.text_field :character_name %>
</div>
<div class="field">
  <%= f.label :experience %>
  <%= f.number_field :experience %>
</div>
<div class="field">
  <%= f.label :alignment %>
  <%= f.text_field :alignment %>
</div>
<div class="field">
  <%= f.label :strength %>
  <%= f.number_field :strength %>
</div>
<div class="field">
  <%= f.label :dexterity %>
  <%= f.number_field :dexterity %>
</div>
<div class="field">
  <%= f.label :constitution %>
  <%= f.number_field :constitution %>
</div>
<div class="field">
  <%= f.label :intelligence %>
  <%= f.number_field :intelligence %>
</div>
<div class="field">
  <%= f.label :wisdom %>
  <%= f.number_field :wisdom %>
</div>
<div class="field">
  <%= f.label :charisma %>
  <%= f.number_field :charisma %>
</div>
<div class="field">
  <%= f.label :backstory %>
  <%= f.text_area :backstory %>
</div>
<div class="field">
  <%= f.submit %>
</div>
<% end %>
