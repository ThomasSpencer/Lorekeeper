<header>
  <h1 class="header-title">Landscapes within <%= @continent.name %></h1>
</header>

<article class="main-content">
  <div class="row">
    <% @landscapes.each do |landscape| %>
    <div class="col-xs-6 col-sm-4 col-md-3">
      <a href="<%= continent_landscape_path(@continent, landscape) %>" class="thumbnail thumbnail-custom">
        <img class="thumbnail-image" src="http://placekitten.com/600/600" />
        <h3 class="thumbnail-title"><%= landscape.name %></h3>
      </a>
      <div class="thumbnail-options" role="group">
        <a href="<%= edit_continent_landscape_path(@continent, landscape) %>">
          <button type="button" class="btn-primary">Edit Information</button>
        </a>
        <a data-confirm="Are you sure you want to delete <%= landscape.name %>?"data-method="delete" href="<%= continent_landscape_path(@continent, landscape) %>">
          <button type="button" class="btn-danger">Delete <%= landscape.name %></button>
        </a>
      </div>
    </div>
    <% end %>

    <div class="col-xs-6 col-sm-4 col-md-3">
      <a href="<%= new_continent_landscape_path(@continent) %>" class="thumbnail new-thumbnail">
        <h3 class="thumbnail-title">Add a landscape</h3>
      </a>
    </div>

  </div>
</article>
