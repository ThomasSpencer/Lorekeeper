<%= form_for [@city, @character] do |f| %>
<div class="form-group row">
  <%= f.label :name, class: "col-sm-2 col-form-label"  %>
  <div class="col-sm-8">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :profession, class: "col-sm-2 col-form-label"  %>
  <div class="col-sm-8">
    <%= f.text_field :profession, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :backstory, class: "col-sm-2 col-form-label" %>
  <div class="col-sm-8">
    <%= f.text_area :backstory, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2"></div>
  <div class="col-sm-2">
    <%= f.submit 'Create New Character', class: "form-control form-control-sm" %>
  </div>
</div>
<% end %>
